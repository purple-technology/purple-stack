{
	"extends": "@purple-stack/tsconfig/base.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "dist",
		"jsx": "react-jsx",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"types": ["node", "vite/client"]
	},
	"include": ["api", "features", "web", "sst-env.d.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"features/**/infra",
		"features/**/backend",
		"features/**/stack"
	],
	"references": [
		{ "path": "../../packages/core" },
		{ "path": "../../packages/trpc-api" }
	]
}
